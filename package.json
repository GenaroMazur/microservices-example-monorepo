{
  "scripts": {
    "dev:gateway": "ts-node-dev --respawn --transpile-only  api-gateway/src/index.ts",
    "dev:auth": "ts-node-dev --respawn --transpile-only  auth-microservice/src/index.ts",
    "dev:some-service": "ts-node-dev --respawn --transpile-only  some-microservice/src/index.ts",
    "dev:all": "concurrently \"yarn run dev:gateway\" \"yarn run dev:auth\" \"yarn run dev:some-service\"",
    "build": "tsc",
    "fmt": "prettier --write  \"**/*.{js,jsx,ts,tsx,css,scss,md}\"",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint:fix": "eslint --ext .ts src --fix",
    "start:gateway": "node dist/api-gateway/src/index.js",
    "start:auth": "node dist/auth-microservice/src/index.js",
    "start:some-service": "node dist/some-microservice/src/index.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:some-service\""
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "winston": "^3.17.0"
  }
}
